{
  "name": "uniz-production-root",
  "version": "1.0.1",
  "description": "UniZ Microservices Production Ecosystem",
  "scripts": {
    "dev": "turbo dev --concurrency 20",
    "build": "turbo build",
    "test": "node scripts/comprehensive_test.js",
    "test:unit": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint",
    "db:push": "turbo db:push",
    "db:seed": "turbo db:seed",
    "test:e2e": "node scripts/comprehensive_test.js",
    "install:all": "npm install",
    "push:all": "git add . && git commit -m \"Update\" && git push origin main",
    "data-reset": "turbo data-reset --concurrency 1"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "colors": "^1.4.0",
    "exceljs": "^4.4.0",
    "form-data": "^4.0.5",
    "xlsx": "^0.18.5"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^1.13.4"
  }
}