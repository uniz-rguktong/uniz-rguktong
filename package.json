{
  "name": "uniz-production-root",
  "version": "1.0.1",
  "description": "UniZ Microservices Production Ecosystem",
  "scripts": {
    "dev": "bash scripts/start_services.sh",
    "db:push": "bash scripts/reset-dbs.sh",
    "db:seed": "node scripts/seed.js && bash scripts/seed-admins.sh",
    "deploy": "bash scripts/vercel_update.sh",
    "test": "bash tests/test_api_flow.sh",
    "clean": "rm -rf logs/ *.log",
    "install:all": "for d in uniz-*; do (cd $d && npm install); done",
    "push:all": "git add . && git commit -m \"Update: Codebase synchronization and restructuring\" && git push origin main"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "colors": "^1.4.0",
    "exceljs": "^4.4.0",
    "form-data": "^4.0.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
