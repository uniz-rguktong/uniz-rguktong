{
  "name": "uniz-production-root",
  "version": "1.0.0",
  "description": "UniZ Microservices Production Ecosystem",
  "scripts": {
    "dev": "bash scripts/start_services.sh",
    "deploy": "bash scripts/vercel_update.sh",
    "test": "bash tests/test_api_flow.sh",
    "seed": "bash scripts/seed-admins.sh",
    "clean": "rm -f *.log gateway.log",
    "install-all": "for d in uniz-*; do (cd $d && npm install); done",
    "build-all": "for d in uniz-*; do (cd $d && npm run build); done"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
