{
  "name": "uniz-production-root",
  "version": "1.0.1",
  "description": "UniZ Microservices Production Ecosystem",
  "scripts": {
    "dev": "bash scripts/start_services.sh",
    "db:push": "bash scripts/reset-dbs.sh",
    "db:seed": "node scripts/seed.js && bash scripts/seed-admins.sh",
    "deploy": "bash scripts/vercel_update.sh",
    "test": "node scripts/comprehensive_test.js",
    "clean": "rm -rf logs/ *.log",
    "install:all": "npm install",
    "push:all": "git add . && git commit -m \"Update: Codebase synchronization and restructuring\" && git push origin main",
    "data-reset": "npm run data-reset --prefix apps/academics && npm run data-reset --prefix apps/user && npm run data-reset --prefix apps/auth && npm run data-reset --prefix apps/outpass"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "colors": "^1.4.0",
    "exceljs": "^4.4.0",
    "form-data": "^4.0.5",
    "xlsx": "^0.18.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^1.13.4"
  }
}
