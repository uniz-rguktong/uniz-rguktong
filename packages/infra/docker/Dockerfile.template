FROM node:18-alpine

WORKDIR /app

# Note: In a real monorepo build, we need to handle shared deps better.
# For this phase, we assume each service folder is valid.
# Ideally, we copy uniz-shared first.

COPY ./uniz-shared /uniz-shared
WORKDIR /uniz-shared
RUN npm install && npm run build

WORKDIR /app
COPY ./package.json ./package-lock.json* ./
RUN npm install

COPY . .
RUN npm run build

CMD ["npm", "start"]
